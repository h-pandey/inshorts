# Database Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=news_db
MONGODB_COLLECTION=articles

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500

# Cursor API Configuration
CURSOR_API_KEY=your_cursor_api_key_here
CURSOR_BASE_URL=https://api.cursor.sh
CURSOR_MODEL=gpt-4
CURSOR_MAX_TOKENS=1000
CURSOR_TEMPERATURE=0.3

# Application Configuration
APP_NAME=Contextual News API
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Performance Configuration
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=60

# Cache Configuration
CACHE_TTL=3600  # 1 hour in seconds
TRENDING_CACHE_TTL=900  # 15 minutes in seconds

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Geospatial Configuration
DEFAULT_RADIUS_KM=10
MAX_RADIUS_KM=100
GRID_SIZE_KM=5

# Trending Configuration
TRENDING_UPDATE_INTERVAL=900  # 15 minutes in seconds
TRENDING_DECAY_FACTOR=0.1
TRENDING_INTERACTION_WEIGHT=1.0
TRENDING_RECENCY_WEIGHT=0.5
TRENDING_LOCATION_WEIGHT=0.3
